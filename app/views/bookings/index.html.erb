<p id="notice"><%= notice %></p>

<h1>Upcoming Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Apptype</th>
      <th>Appclient</th>
      <th>Appdate</th>
      <th>Apptime</th>
      <th>Applength</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.appType %></td>
        <td><%= booking.appClient %></td>
        <td><%= booking.appDate %></td>
        <td><%= booking.appTime %></td>
        <td><%= booking.appLength %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

